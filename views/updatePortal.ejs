        <div class="wrapper wrapper--w900">
            <div class="card card-6">
                <div class="card-heading">
                    <h2 class="title" style="color: black">Update Id-Card Details</h2>
                </div>
                <div class="card-body">
        

                      <form id="two" action="/register/admin/update?_method=PUT" method="POST" enctype="multipart/form-data">
                             <div class="form-row">
                            <div class="name">Upload School Logo</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="file" name="passport">
                                </div>
                            </div>
                        </div>
        

                        <div class="form-row">
                            <div class="name">School Name</div>
                            <div class="value">
                                <input class="input--style-6" type="text" name="schoolName" placeholder="School Name">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">School Address</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="text" name="address" placeholder="School Address">
                                </div>
                            </div>
                        </div>
                        


                        <div class="form-row">
                            <div class="name">Id Card Validity</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="text" name="validity" placeholder="Validity">
                                </div>
                            </div>
                        </div>

                   
                            
                        <div class="form-row">
                            <div class="name">Upload Admin Signature</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="file" name="sign" >
                                </div>
                            </div>
                        </div>

                        
                         <div class="form-row">
                        
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="hidden" value="ADMIN" name="role" >
                                </div>
                            
                        </div>


                
                <div class="card-footer">
                    <button class="btn btn--radius-2 btn--blue-2" type="submit">Submit</button>
                </div>

                </form>

            </div>
        </div>
    </div>
